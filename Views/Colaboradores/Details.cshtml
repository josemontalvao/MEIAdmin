@model MEIAdmin.Models.Colaborador

@{
    ViewData["Title"] = "Detalhes do Colaborador";
}

<h2>Detalhes do Colaborador</h2>

<div>
    <h4>Colaborador</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nome:</dt>
        <dd class="col-sm-10">@Model.Nome</dd>

        <dt class="col-sm-2">Cargo:</dt>
        <dd class="col-sm-10">@Model.Cargo</dd>

        <dt class="col-sm-2">Telefone:</dt>
        <dd class="col-sm-10">@Model.Telefone</dd>

        <dt class="col-sm-2">Email:</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Endereço:</dt>
        <dd class="col-sm-10">@Model.Endereco, @Model.Numero - @Model.Bairro, @Model.Cidade - @Model.Estado</dd>

        <dt class="col-sm-2">CEP:</dt>
        <dd class="col-sm-10">@Model.CEP</dd>

        <dt class="col-sm-2">Data de Contratação:</dt>
        <dd class="col-sm-10">@Model.DataContratacao.ToString("dd/MM/yyyy")</dd>

        @if (Model.DataDemissao != null)
        {
            <dt class="col-sm-2">Data de Demissão:</dt>
            <dd class="col-sm-10">@Model.DataDemissao?.ToString("dd/MM/yyyy")</dd>
        }
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</div>