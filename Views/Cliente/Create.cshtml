@model MEIAdmin.Models.Cliente

@{
    ViewData["Title"] = "Criar Cliente";
}

<h2>Criar Cliente</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="RazaoSocial" class="control-label"></label>
        <input asp-for="RazaoSocial" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="CGC" class="control-label"></label>
        <input asp-for="CGC" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="InscEstadual" class="control-label"></label>
        <input asp-for="InscEstadual" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Contato" class="control-label"></label>
        <input asp-for="Contato" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Telefone" class="control-label"></label>
        <input asp-for="Telefone" class="form-control" />
    </div>

    <div class="form-group">
        <label for="DataCadastro">Data de Cadastro</label>
        <input asp-for="DataCadastro" type="date" class="form-control" />
        <span asp-validation-for="DataCadastro" class="text-danger"></span>
    </div>

    <h4>Endere√ßo</h4>

    <div class="form-group">
        <label asp-for="Endereco" class="control-label"></label>
        <input asp-for="Endereco" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Numero" class="control-label"></label>
        <input asp-for="Numero" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Bairro" class="control-label"></label>
        <input asp-for="Bairro" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Cidade" class="control-label"></label>
        <input asp-for="Cidade" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Estado" class="control-label"></label>
        <input asp-for="Estado" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="CEP" class="control-label"></label>
        <input asp-for="CEP" class="form-control" />
    </div>

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Salvar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
