@model MEIAdmin.Models.Produto

@{
    ViewData["Title"] = "Editar Produto";
}

<h2>Editar Produto</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Nome" class="control-label"></label>
        <input asp-for="Nome" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Quantidade" class="control-label"></label>
        <input asp-for="Quantidade" class="form-control" type="number" />
    </div>
    <div class="form-group">
        <label asp-for="PrecoCompra" class="control-label"></label>
        <input asp-for="PrecoCompra" class="form-control" type="number" step="0.01" />
    </div>
    <div class="form-group">
        <label asp-for="PrecoVenda" class="control-label"></label>
        <input asp-for="PrecoVenda" class="form-control" type="number" step="0.01" />
    </div>
    <div class="form-group">
        <label asp-for="Categoria" class="control-label"></label>
        <input asp-for="Categoria" class="form-control" />
    </div>

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Salvar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
