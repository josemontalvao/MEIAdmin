@model MEIAdmin.Models.Produto

@{
    ViewData["Title"] = "Excluir Produto";
}

<h2>Excluir Produto</h2>

<h3>Tem certeza que deseja excluir este produto?</h3>
<div>
    <h4>@Model.Nome</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Quantidade</dt>
        <dd class="col-sm-10">@Model.Quantidade</dd>

        <dt class="col-sm-2">Preço de Compra</dt>
        <dd class="col-sm-10">@Model.PrecoCompra.ToString("C")</dd>

        <dt class="col-sm-2">Preço de Venda</dt>
        <dd class="col-sm-10">@Model.PrecoVenda.ToString("C")</dd>

        <dt class="col-sm-2">Categoria</dt>
        <dd class="col-sm-10">@Model.Categoria</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Excluir</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
