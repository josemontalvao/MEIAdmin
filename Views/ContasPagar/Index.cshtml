@model IEnumerable<MEIAdmin.Models.ContaPagar>

@{
    ViewData["Title"] = "Contas a Pagar";
}

<h2>Contas a Pagar</h2>

<a asp-action="Create" class="btn btn-primary">Nova Conta</a>

<table class="table mt-3">
    <thead>
        <tr>
            <th>Valor</th>
            <th>Vencimento</th>
            <th>Pagamento</th>
            <th>Status</th>
            <th>Fornecedor</th>
            <th>Colaborador</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            @foreach (var conta in Model)
            {
                <tr>
                    <td>@conta.Valor.ToString("C")</td>
                    <td>@conta.DataVencimento.ToString("dd/MM/yyyy")</td>
                    <td>@(conta.DataPagamento?.ToString("dd/MM/yyyy") ?? "Não pago")</td>
                    <td>@conta.Status</td>
                    <td>@(conta.Fornecedor?.RazaoSocial ?? "N/A")</td>
                    <td>@(conta.Colaborador?.Nome ?? "N/A")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@conta.Id" class="btn btn-warning btn-sm">Editar</a>
                        <a asp-action="Delete" asp-route-id="@conta.Id" class="btn btn-danger btn-sm">Excluir</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7" class="text-center">Nenhuma conta cadastrada.</td>
            </tr>
        }
    </tbody>
</table>
