@model MEIAdmin.Models.ContaPagar

<h2>Editar Conta a Pagar</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Descricao" class="control-label">Descrição</label>
        <input asp-for="Descricao" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Valor" class="control-label">Valor</label>
        <input asp-for="Valor" class="form-control" type="number" step="0.01" />
    </div>

    <div class="form-group">
        <label asp-for="DataVencimento" class="control-label">Data de Vencimento</label>
        <input asp-for="DataVencimento" class="form-control" type="date" />
    </div>

    <div class="form-group">
        <label asp-for="ColaboradorId" class="control-label">Colaborador</label>
        <select asp-for="ColaboradorId" class="form-control">
            <option value="">Selecione um Colaborador</option>
            @if (ViewBag.Colaboradores != null)
            {
                foreach (var colaborador in ViewBag.Colaboradores as List<Colaborador>)
                {
                    <option value="@colaborador.Id" selected="@(Model.ColaboradorId == colaborador.Id ? "selected" : null)">
                        @colaborador.Nome
                    </option>
                }
            }
        </select>
    </div>

    <div class="form-group">
        <label asp-for="FornecedorId" class="control-label">Fornecedor</label>
        <select asp-for="FornecedorId" class="form-control">
            <option value="">Selecione um Fornecedor</option>
            @if (ViewBag.Fornecedores != null)
            {
                foreach (var fornecedor in ViewBag.Fornecedores as List<Fornecedor>)
                {
                    <option value="@fornecedor.Id" selected="@(Model.FornecedorId == fornecedor.Id ? "selected" : null)">
                        @fornecedor.RazaoSocial
                    </option>
                }
            }
        </select>
    </div>

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Salvar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
